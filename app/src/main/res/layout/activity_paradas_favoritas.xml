<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_gradient_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lucianodsepulveda.apppasajero.ui.ParadasFavoritasActivity">





    <LinearLayout
        android:orientation="horizontal"
        android:background="#B7EFD587"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearAdvertencia"
        android:padding="3dp">
        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="2dp"
            android:background="@drawable/logoadvertencia"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delize hacia un lado para eliminar una parada de la lista de paradas favoritas"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/lvFav"
            android:layout_width="336dp"
            android:layout_height="50dp"
            android:visibility="invisible" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#D83F3F"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="sin conexion"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="376dp"
        android:layout_height="630dp"
        android:layout_below="@+id/linearAdvertencia"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/main_gradient_color" />

</RelativeLayout>


