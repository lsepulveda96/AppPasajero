<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_mapa_gris"
    tools:context="com.example.lucianodsepulveda.apppasajero.ui.ScannerQRCodeActivity">

    <!-- texto sin internet -->
    <TextView
        android:id="@+id/tv_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D83F3F"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="sin conexion"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:visibility="gone"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/btn_follow_style"
            android:stateListAnimator="@null"
            android:elevation="10dp"
            >


            <TextView
                android:id="@+id/txtBarcodeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bebasneue_regular"
                android:text="Escaneo QR"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layoutScanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <SurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="300dp"
                    android:layout_height="450dp"
                    android:layout_marginVertical="50dp"
                    android:layout_marginHorizontal="10dp"
                    />


            </LinearLayout>

<!--            android:visibility="invisible"-->

        </LinearLayout>



    </LinearLayout>










    <!--ver-->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="-42dp"
        android:text="Atras"
        android:visibility="invisible" />

</RelativeLayout>



